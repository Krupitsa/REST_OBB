		{
			"name": "Выпуск JWT (JWS) токена",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"//Set Environment variable Token\r",
							"var jsonData = JSON.parse(responseBody);\r",
							"postman.setEnvironmentVariable(\"token\", jsonData.token);\r",
							"\r",
							"pm.test(\"Status code is 200\", function () { pm.response.to.have.status(200); });\r",
							"\r",
							"pm.test(\"Token include correct start\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.token).to.include(\"eyJhbGciOiJSUzI1NiIsInppcCI6IkRFRiJ9\");\r",
							"\r",
							"});\r",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "accept",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "content-type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\"username\":\"1\", \"password\":\"111\"}"
				},
				"url": {
					"raw": "{{host}}/authentication-web/api/auth/",
					"host": [
						"{{host}}"
					],
					"path": [
						"authentication-web",
						"api",
						"auth",
						""
					]
				}
			},
			"response": []
		},
		{
			"name": "Валидация JWS токена",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 20x\", function () {\r",
							"    pm.expect(pm.response.code).to.be.oneOf([200, 202]);\r",
							"});\r",
							"\r",
							"pm.test(\"Body contains username\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.subject).to.eql(\"1\");\r",
							"\r",
							"});\r",
							"\r",
							"\r",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"protocolProfileBehavior": {
				"disableBodyPruning": true
			},
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "accept",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "content-type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "formdata",
					"formdata": []
				},
				"url": {
					"raw": "{{host}}/authentication-web/api/auth/validate?token={{token}}",
					"host": [
						"{{host}}"
					],
					"path": [
						"authentication-web",
						"api",
						"auth",
						"validate"
					],
					"query": [
						{
							"key": "token",
							"value": "{{token}}"
						}
					]
				}
			},
			"response": []
