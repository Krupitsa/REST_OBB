		{
			"name": "Завершить сеанс токена",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Response time is less than 600ms\", function () {\r",
							"    pm.expect(pm.response.responseTime).to.be.below(600);\r",
							"});\r",
							"\r",
							"pm.test(\"Status code No Content\", function () {\r",
							"    pm.response.to.have.status(\"No Content\");\r",
							"});\r",
							"\r",
							"\r",
							"if (pm.environment.get(\"token\")){\r",
							"    pm.environment.set(\"token\", null);\r",
							"    postman.setNextRequest(\"Завершить сеанс токена\");\r",
							"}else {\r",
							"    postman.setNextRequest(null);\r",
							"} \r",
							""
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"if (pm.environment.get(\"token\")){\r",
							"    pm.request.headers.add({\r",
							"    key: \"authorization\",\r",
							"    value: \"Bearer {{token}}\"\r",
							"    });\r",
							"}else {\r",
							"    pm.request.headers.add({\r",
							"    key: \"authorization\",\r",
							"    value: \"Bearer {{token2}}\"\r",
							"    });\r",
							"}\r",
							""
						],
